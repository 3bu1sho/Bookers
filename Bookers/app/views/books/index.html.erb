<h1>Books</h1>

<section class="book-text">
    
    <body>
        
     <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    
    <table>
        <thead>
        <tr>
        <th>本のタイトル</th>
        <th>感想</th>
        </tr>
        </thead>
        
        <% @books.each do |book| %>
    <tr>
        <td>
            <%= book.title %>
        </td>
        <td>
            <%= link_to book.body, book_path(book) %>
        </td>
                <td>
            <%= link_to "show", book_path(book) %>
        </td>
        <td>
            <%= link_to "edit", edit_book_path(book) %>
        </td>
         <td>
            <%= link_to "destroy", destroy_book_path(book), method: :delete %>
            
        </td>
    </tr>
　　　　<% end %>
　　　　    </table>
　　　　    </body>

<h1>新規投稿</h1>
