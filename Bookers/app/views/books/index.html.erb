<h1>Books</h1>

<section class="book-text">
    
    <body>
        
<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
              error
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
    
    
    <table>
        <thead>
        <tr>
        <th>Title</th>
        <th>Body</th>
        </tr>
        </thead>
        
        <% @books.each do |book| %>
    <tr>
        <td>
            <%= book.title %>
        </td>
        <td>
            <%= book.body %>
        </td>
                <td>
            <%= link_to "show", book_path(book) %>
        </td>
        <td>
            <%= link_to "edit", edit_book_path(book) %>
        </td>
         <td>
            <%= link_to "destroy", destroy_book_path(book), method: :delete %>
            
        </td>
    </tr>
　　　　<% end %>
　　　　
　　　　　　　　    


　　　　    </table>
